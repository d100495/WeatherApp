<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="@dimen/forecastListElementHeight">
            <TextView
                android:id="@+id/adapterViewForecastTextView_DateTime"
                android:text="DateTime"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_height="@dimen/forecastListElementHeight">

            <ImageView
                android:id="@+id/adapterViewForecastTextView_Icon"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/ic_weather_partlycloudy"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/adapterViewForecastTextView_Description"
                android:text="Description"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="@dimen/forecastListElementHeight"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="35dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ic_water_percent"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/forecastListIconWidth"
                        android:layout_height="@dimen/forecastListIconHeight" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/adapterViewForecastTextView_Humidity"
                        android:text="Humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="@string/forecastUnit_Humidity"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ic_thermometer"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/forecastListIconWidth"
                        android:layout_height="@dimen/forecastListIconHeight" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/adapterViewForecastTextView_avgTemperature"
                        android:text="avgTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="@string/forecastUnit_Temperature"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="35dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ic_weather_windy"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/forecastListIconWidth"
                        android:layout_height="@dimen/forecastListElementHeight" />

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/adapterViewForecastTextView_WindSpeed"
                        android:text="WindSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="@string/forecastUnit_WindSpeed"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ic_thermometer_lines"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/forecastListIconWidth"
                        android:layout_height="@dimen/forecastListIconHeight" />

                    <TextView
                        android:id="@+id/adapterViewForecastTextView_maxTemperature"
                        android:gravity="center_vertical"
                        android:text="maxTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="@string/forecastUnit_Temperature"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>